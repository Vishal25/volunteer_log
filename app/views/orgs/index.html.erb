<% provide(:title, 'All Organizations') %>
<h2 class="center">All Organizations</h2>

<%#= will_paginate %>

<ul class="orgs">
	<% @orgs.each do |org| %>
		<li>
			<%= image_tag("atmalogo.jpg", alt: "Profile Photo", class: "pic") %>
			<%= link_to "#{org.org_name}", org %>
			<% if current_user.admin? %>
				| <%= link_to 'Delete', org, method: :delete, data: { confirm: "Are you sure you want to delete this organization?" } %>
			<% end %>
		</li>
	<% end %>
</ul>

<%#= will_paginate %>